##:
#h: Usage: $0 [OPTS...] URL ...
#h:
#h: Open a website in app mode.
#h:
#h:     -s         : Use surf.
#h:     -g         : Use google chrome.
#h:     -f         : Fork and print the window ID.
#h:     -F         : Fork and set $WINID.
##:
. hmain
x_www_app() {
    local OPTIND optopt url browser=s WWW_APP_FORK=''
    while getopts "sgfF" optopt; do
        case $optopt in
            s)  browser=s;;
            g)  browser=g;;
            f)  WWW_APP_FORK=p;;
            F)  WWW_APP_FORK=v;;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    for url in "$@"; do
        case "${browser}" in
            s) x_www_app_run surf -m -a A -b -d -S -t "${url}"        ;;
            g) x_www_app_run google-chrome --incognito --app="${url}" >/dev/null 2>&1;;
        esac
    done        
}
x_www_app_run() {
    local pid=''
    case "${WWW_APP_FORK}" in
        p)  "$@" >&2 &
            sleep 1
            xdotool search --pid="$!" | tail -n 1
            ;;
        v)  "$@" >&2 &
            sleep 1
            WINID="`xdotool search --pid="$!" | tail -n 1`"
            test -n "${WINID}"
            ;;
        '') "$@" >&2
            ;;
    esac
}
hmain -f "x-www-app" -r "xdotool" x_www_app "$@"
