##:
#h: Usage: xshot [-n NAME][-l][-r][-i|v[a]
#h:                   |    |   |   | | '------- With Audio
#h:    Name the captures   |   |   | '------- Record video
#h:                        |   |   '------- Take an screenshot
#h:       List captures ---'   '--------- Remove all captures with NAME
#h:
#h: Take a screenshot of a window selected by `xwinsel(1)` and
#h: save to screenshot directory.
##:
. hlog
. hmain
. xwinsel
. vid2gif
xshot() {
    ## Parse options.
    local OPTIND optopt n l t f='' name='xshot' list='' remove='' fmt='' no_sound='y'
    while getopts "n:lriva" optopt; do
        case $optopt in
            n)  name="${OPTARG}";;
            l)  list=y;;
            r)  remove=y;;
            i)  fmt=".png";;
            v)  fmt=".gif";;
            a)  no_sound="";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    ## List files.
    if test -n "${list}"; then
        find . -iname "${name}*${fmt}"
        return 0
    elif test -n "${remove}"; then
        find . -iname "${name}*${fmt}" -exec rm -i '{}' ';'
        return 0
    elif test ! -n "${fmt}"; then
        return 0
    fi
    ## Select a window.
    if test ! -n "${WINID}"; then
        xwinsel
        test -n "${WINID}"
    fi
    ## Calculate filename
    for n in `seq 1 99 | xargs -L 1 printf '%s-%02i\n' "${name}"`; do
        if test ! -f "${n}${fmt}"; then
            f="${n}${fmt}"
            break
        fi
    done
    test -n "${f}"
    ## Take screenshot.
    case "${f}" in
        *.png) t="`mktemp -u`.xwd"
               xdotool mousemove --window "${WINID}" 200 200
               find-cursor -c blue
               sleep 3
               xwd -nobdrs -out "${t}" -id "${WINID}" >&2
               find-cursor -c red
               convert "${t}" "${f}"
               echo "${f}"
               ;;
        *.gif) t="`mktemp -u`.ogv"
               xdotool mousemove --window "${WINID}" 200 200
               l="`xmenu <<-EOF
		Start recording (CTRL-c) to finish.	start
		Abort.	abort
		EOF`"
               if test @"${l}" = @"abort"; then
                   return 0
               fi
               recordmydesktop \
                   --windowid "${WINID}" \
                   --stop-shortcut "Control+c" \
                   ${no_sound:+ --no-sound} \
                   -o "${t}"
               vid2gif -o "${f}" -- "${t}"
               echo "${f}"
               ;;
    esac
    

    
}
## -----------------------------------------------------------------------------
hmain -f "xshot"       \
      -r "wmctrl"      \
      -r "xwd"         \
      -r "xdotool"     \
      -r "find-cursor" \
      -r "xmenu"       \
      -r "mktemp"      \
      xshot            \
      "$@"
